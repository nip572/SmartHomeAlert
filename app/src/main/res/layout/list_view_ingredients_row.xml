<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"><![CDATA[


    >

    ]]>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_ic_googleplayservices"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:id="@+id/list_view_ingredients_img"
        android:layout_weight="1" />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_ingredients_text"
        android:layout_weight="1" />

    <ToggleButton

        android:layout_width="wrap_content"
        android:textOff="Add"
        android:textOn="Remove"
        android:gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:textColor="#008000"
        android:background="@null"
        android:id="@+id/list_view_ingredient_toggle_button"
        android:layout_weight="1" />

</LinearLayout>