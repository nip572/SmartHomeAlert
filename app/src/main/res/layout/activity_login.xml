<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.nipun.smarthomealert.Login">



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:ems="10"
            android:id="@+id/login_email"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintRight_toRightOf="@+id/login_password"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="41dp"
            app:layout_constraintLeft_toLeftOf="@+id/login_password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/login_email"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/imageView6" />



    <ImageView
            android:layout_width="146dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/oval2"
            android:id="@+id/imageView3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/login_email"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="114dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/vaultry"
            android:id="@+id/imageView4"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/email_icon"
            android:id="@+id/imageView5"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/login_password"
            android:layout_marginStart="65dp"
            android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="52dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/password_icon"
            android:id="@+id/imageView6"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/imageView5"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_create_account_button"
            app:layout_constraintTop_toTopOf="parent" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/login_login_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        fancy:fb_ghost="false"
        android:layout_weight="1"

        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#36b47f"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#36b47f"
        fancy:fb_focusColor="#13d203"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="LOGIN"
        fancy:fb_textColor="#ffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="47dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="213dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="213dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/login_create_account_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        fancy:fb_ghost="false"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#66ccff"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#66ccff"
        fancy:fb_focusColor="#9dccff"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="CREATE"
        fancy:fb_textColor="#ffffff"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="49dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:padding="16dp"
        fancy:fb_borderColor="#ff4000"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#ff4000"
        fancy:fb_focusColor="#d04000"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="SIGN IN WITH GOOGLE"
        fancy:fb_textColor="#ffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/login_create_account_button"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/forgot_password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/login_login_button" />

    <TextView
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/white"
        android:id="@+id/forgot_password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/login_login_button"
        app:layout_constraintTop_toTopOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>
