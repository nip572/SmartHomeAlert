<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.nipun.smarthomealert.Login">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:ems="10"
            android:id="@+id/login_email"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/login_email"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/login_email"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_email" />

        <ImageButton
            android:text="Login"
            android:src="@drawable/loginbutton"
            android:background="@null"

            android:layout_width="214dp"
            android:layout_height="53dp"
            android:id="@+id/login_login_button"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="112dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="112dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_create_account_button"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/login_login_button"
            android:layout_marginStart="26dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="14dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/oval2"
            android:id="@+id/imageView3"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            app:layout_constraintRight_toRightOf="@+id/login_email"
            android:layout_marginTop="34dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_email"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/vaultry"
            android:id="@+id/imageView4"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/imageView3"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/triangle1"
            android:id="@+id/imageView5"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="54dp"
            android:layout_marginTop="8dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_email" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/triangle1"
            android:id="@+id/imageView6"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="52dp"
            android:layout_marginTop="11dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_password" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="36dp"
            app:layout_constraintRight_toRightOf="@+id/login_login_button"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Login"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/login_login_button"
            app:layout_constraintLeft_toRightOf="@+id/login_create_account_button" />


</android.support.constraint.ConstraintLayout>
